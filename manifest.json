{
  "manifest_version": 2,
  "name": "XRPTipBot Statistics Link on Twitter",
  "short_name": "XRPTipBot Statistics Link",
  "version": "2.0.2",
  "author": "Daniel Siedentopf",
  "description": "Adds a link to the @xrptipbot statistics page of the user who created the tweet in your time line",
  "icons": {	
				"16": "icon_16.png",
				"48": "icon_48.png",
				"128": "icon_128.png"
			},

  "content_scripts": [
    {
      "matches": ["https://twitter.com/*","https://mobile.twitter.com/*"],
      "js": ["add-statistics-link.js"]
    }
  ],
  "web_accessible_resources": ["xrptipbot.png"],
  
  "homepage_url": "https://xrptipbot-statistics.siedentopf.xyz/overallstatistics"
}